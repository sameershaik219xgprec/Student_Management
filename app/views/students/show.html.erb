<div class="container mt-5">
<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<%= render @student %>

<div class="mt-4">
  <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-warning" %>
  <%= link_to "Back to students", students_path, class: "btn btn-secondary ml-2" %>

  <%= button_to "Destroy this student", @student, method: :delete, class: "btn btn-danger ml-2", data: { confirm: "Are you sure?" } %>
</div>
</div>