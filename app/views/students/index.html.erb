<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <h1 class="mb-4">Students</h1>

  <table cellpadding=25 cellspacing=30 align="center" style="text-align:center">
    <thead>
      <tr>
        <th>Name</th>
        <th>Section</th>
        <th>Marks</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.section %></td>
          <td><%= student.marks %></td>
          <td><%= link_to "Show", student, class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to "Edit", edit_student_path(student), class: "btn btn-secondary btn-sm" %></td>
          <td><%= link_to "Delete", student, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= link_to "New student", new_student_path, class: "btn btn-success" %>
  </div>
</div>
